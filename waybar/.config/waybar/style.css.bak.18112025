#workspaces button {
	margin-top: 4px;
	margin-bottom: 4px;
	margin-left: 12px;
	margin-right: 8px;
  padding-left: 8px;
  padding-right: 8px;
	margin-bottom: 4px;
	border-radius: 26px;
	transition: none;
	color: @yellow;
	background: @darkgray;
}
#workspaces button.active {
	margin-top: 0;
	margin-bottom: 4px;
  padding-left: 16px;
  padding-right: 16px;
	margin-bottom: 0;
	border-radius: 26px;
	transition: none;
	color: @darkgray;
	background: @yellow;
}
#workspaces button:hover {
	margin-top: 4px;
	margin-bottom: 4px;
	margin-left: 12px;
	margin-right: 8px;
  padding-left: 8px;
  padding-right: 8px;
	margin-bottom: 4px;
