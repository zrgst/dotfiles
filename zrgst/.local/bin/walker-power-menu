#!/usr/bin/env bash
options="⏻  Power off\n  Reboot\n  Log out\n  Suspend"

choice=$(echo -e "$options" | walker --dmenu "Power:")
rc=$?

if [ $rc -ne 0 ] || [ -z "${choice:-}" ]; then
  "$HOME/.local/bin/walker-zrgst-menu"
  exit 0
fi

case "$choice" in
"⏻  Power off") systemctl poweroff ;;
"  Reboot") systemctl reboot ;;
"  Log out") hyprctl dispatch exit ;;
"  Suspend") systemctl suspend ;;
esac
