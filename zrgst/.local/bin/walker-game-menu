#!/usr/bin/env bash
options=" Discord  \n󰞇 Ascension WoW\n󰓥 Project Epoch\n󰳗 Turtle-WoW\n󰍳 Minecraft\n󰓓 Steam"
choice=$(echo -e "$options" | walker --dmenu "Select your game:")
rc=$?

if [ $rc -ne 0 ] || [ -z "${choice:-}" ]; then
  "$HOME/.local/bin/walker-zrgst-menu"
  exit 0
fi

case "$choice" in
" Discord  ")
  setsid -f /usr/local/bin/discord-wayland >/dev/null 2>&1
  ;;
"󰞇 Ascension WoW")
  setsid -f /usr/local/bin/ascension.sh >/tmp/ascension.log 2>&1
  ;;
"󰓥 Project Epoch")
  setsid -f /usr/local/bin/epoch.sh >/tmp/epoch.log 2>&1
  ;;
"󰳗 Turtle-WoW")
  setsid -f /usr/local/bin/turtlewow.sh >/tmp/turtle.log 2>&1
  ;;
"󰍳 Minecraft")
  setsid -f /usr/bin/prismlauncher >/tmp/prism.log 2>&1
  ;;
"󰓓 Steam")
  setsid -f /usr/bin/steam >/tmp/steam.log 2>&1
  ;;
esac
